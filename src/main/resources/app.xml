<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean class="com.tsyrulik.OrderService">
<!--        <constructor-arg ref="orderValidator"/>-->
    </bean>

    <bean id="orderValidator1" class="com.tsyrulik.OrderValidatorBasic"/>
    <bean id="orderValidator2" class="com.tsyrulik.OrderValidatorExtended"/>

    <bean id="ntsv" class="com.tsyrulik.NonThreadSafeValidator" scope="prototype"/>

    <bean class="com.tsyrulik.TraceBeanPostProcessor"/>
</beans>
